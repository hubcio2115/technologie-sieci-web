{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",

    "strict": true,
    "noUncheckedIndexedAccess": true,

    "moduleResolution": "node",
    "module": "ESNext",
    "noEmit": true,

    "lib": ["es2022"],

    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"]
    },

    "types": [
      "bun-types" // add Bun global
    ]
  },
  "include": ["/**/*.ts", "main.js"],
  "exclude": ["node_modules"]
}
